				</plugins>
			</build>
		</profile>

		<profile>
			<id>production</id>
			<properties>
		    	<minimized-dir>${project.build.directory}/${project.artifactId}/minimized</minimized-dir>
   			</properties>
			<build>

				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>net.alchim31.maven</groupId>
							<artifactId>yuicompressor-maven-plugin</artifactId>
							<version>1.5.1</version>
							<executions>
								<execution>
									<id>default-compress-exec</id>
									<goals>
										<goal>compress</goal>
									</goals>
								</execution>
							</executions>
							<configuration>
								<!-- Minify only, do not obfuscate -->
								<nomunge>true</nomunge>
								<jswarn>false</jswarn>
								<statistics>false</statistics>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>

				<plugins>
					<plugin>
						<artifactId>maven-war-plugin</artifactId>
						<version>2.6</version>
						<configuration>
							<useCache>true</useCache>
						</configuration>

						<!-- Necessary for string replacing in web resources -->
						<executions>
							<execution>
								<id>prepare-war</id>
								<phase>prepare-package</phase>
								<goals>
									<goal>exploded</goal>
								</goals>
							</execution>
						</executions>
					</plugin>

					<plugin>
						<groupId>com.google.code.maven-replacer-plugin</groupId>
						<artifactId>replacer</artifactId>
						<version>1.5.3</version>
						<executions>
							<execution>
								<id>include-minimized-js</id>

								<phase>prepare-package</phase>
								<goals>
									<goal>replace</goal>
								</goals>

								<configuration>
									<includes>
										<include>${project.build.directory}/**/*jspf</include>
									</includes>
									<regex>false</regex>
									<quiet>false</quiet>
									<replacements>
										<replacement>
											<token><![CDATA[<!-- START-PRODUCTION]]></token>
											<value><![CDATA[<!-- START-PRODUCTION -->]]></value>
										</replacement>
										<replacement>
											<token><![CDATA[END-PRODUCTION -->]]></token>
											<value><![CDATA[<!-- END-PRODUCTION -->]]></value>
										</replacement>
										<replacement>
											<token><![CDATA[<!-- START-DEBUG -->]]></token>
											<value><![CDATA[<!-- START-DEBUG]]></value>
										</replacement>
										<replacement>
											<token><![CDATA[<!-- END-DEBUG -->]]></token>
											<value><![CDATA[END-DEBUG -->]]></value>
										</replacement>
									</replacements>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

	</profiles>

</project>