										<include>${project.artifactId}.war.failed</include>
									</includes>
									<followSymlinks>false</followSymlinks>
								</fileset>
							</filesets>
						</configuration>
					</plugin>

					<plugin>
						<artifactId>maven-war-plugin</artifactId>
						<version>2.6</version>
						<configuration>
							<!-- TODO: remove depedency instead of directly libs -->
							<packagingExcludes>
								%regex[WEB-INF/tlds/.*portlet\.tld],
